# Source: alt/templates/auth-svc.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: alt-poll-auth-depl
  labels:
    app: auth
spec:
  replicas: 1
  selector:
    matchLabels:
      app: auth
  template:
    metadata:
      labels:
        app: auth
    spec:
      containers:
        - name: auth
          image: jsaleem/alt-poll-auth:latest
          ports:
            - containerPort: 3000
---
