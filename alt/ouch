  postgresql-password: "eEZNZEEyRXNCWA=="
---
# Source: alt/charts/auth/templates/svc-headless.yaml
apiVersion: v1
kind: Service
metadata:
  name: alt-poll-auth-headless
  labels:
    app.kubernetes.io/name: auth
    helm.sh/chart: auth-10.2.1
    app.kubernetes.io/instance: alt-poll
    app.kubernetes.io/managed-by: Helm
    # Use this annotation in addition to the actual publishNotReadyAddresses
    # field below because the annotation will stop being respected soon but the
    # field is broken in some versions of Kubernetes:
    # https://github.com/kubernetes/kubernetes/issues/58662
    service.alpha.kubernetes.io/tolerate-unready-endpoints: "true"
spec:
  type: ClusterIP
  clusterIP: None
  # We want all pods in the StatefulSet to have their addresses published for
  # the sake of the other Postgresql pods even before they're ready, since they
  # have to be able to talk to each other in order to become ready.
  publishNotReadyAddresses: true
  ports:
    - name: tcp-postgresql
      port: 5432
      targetPort: tcp-postgresql
  selector:
    app.kubernetes.io/name: auth
    app.kubernetes.io/instance: alt-poll
---
# Source: alt/charts/auth/templates/svc.yaml
apiVersion: v1
kind: Service
metadata:
  name: alt-poll-auth
  labels:
    app.kubernetes.io/name: auth
    helm.sh/chart: auth-10.2.1
    app.kubernetes.io/instance: alt-poll
    app.kubernetes.io/managed-by: Helm
  annotations:
spec:
  type: ClusterIP
  ports:
    - name: tcp-postgresql
      port: 5432
      targetPort: tcp-postgresql
  selector:
    app.kubernetes.io/name: auth
    app.kubernetes.io/instance: alt-poll
    role: primary
---
# Source: alt/templates/auth-svc.yaml
apiVersion: v1
kind: Service
metadata:
  name: alt-poll-auth-svc
spec:
  selector:
    app: auth
  ports:
    - protocol: TCP
      port: 3000
      targetPort: 3000
---
