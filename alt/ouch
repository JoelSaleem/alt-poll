metadata:
  name: alt-poll-auth
  labels:
    app.kubernetes.io/name: auth
    helm.sh/chart: auth-10.2.1
    app.kubernetes.io/instance: alt-poll
    app.kubernetes.io/managed-by: Helm
type: Opaque
